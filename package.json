{
  "name": "sparks-backend",
  "version": "1.0.18",
  "description": "sparks backend",
  "engines": {
    "node": "6.1.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "heroku-postbuild": "npm run build",
    "build": "tsc",
    "test": "npm run build && node_modules/.bin/tap --cov dist/**/*.test.js src/*.test.js",
    "lint": "node_modules/.bin/tslint src/**/*.ts",
    "commit": "git-cz",
    "version": "npm run changelog",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -p angular && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SparksNetwork/sparks-backend.git"
  },
  "author": "'sdebaun' <'sdebaun74@gmail.com'>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sdebaun/sparks-backend/issues"
  },
  "homepage": "https://github.com/sdebaun/sparks-backend#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/validate-commit-msg/index.js"
    }
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "commitizen": "^2.8.6",
    "conventional-changelog": "^1.1.0",
    "conventional-changelog-cli": "^1.2.0",
    "cz-customizable": "^4.0.0",
    "ghooks": "^1.3.2",
    "nodemon": "^1.10.1",
    "tap": "^7.0.1",
    "tape": "^4.5.1",
    "tape-async": "^2.1.0",
    "tslint": "^3.15.1",
    "validate-commit-msg": "^2.8.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "braintree": "^1.37.1",
    "braintree-node": "^1.1.1",
    "express": "^4.13.4",
    "firebase": "^2.4.1",
    "firebase-queue": "^1.2.1",
    "inflection": "^1.10.0",
    "moment": "^2.13.0",
    "moment-timezone": "^0.5.4",
    "prfun": "^2.1.3",
    "ramda": "^0.21.0",
    "rx": "^4.0.8",
    "sendgrid": "^2.0.0",
    "seneca": "^2.1.0",
    "seneca-await": "0.0.12",
    "ts-node": "^1.3.0",
    "typescript": "^2.1.0-dev.20160804",
    "typings": "^1.3.3"
  }
}
